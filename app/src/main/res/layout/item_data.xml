<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorItemDataBg"
    android:orientation="vertical"
    android:padding="@dimen/item_data_padding">

    <ImageView
        android:id="@+id/image_item_right_arrow"
        android:layout_width="@dimen/item_data_arrow_size"
        android:layout_height="@dimen/item_data_arrow_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/right_arrow"
        android:src="@drawable/right_arrow" />

    <TextView
        android:id="@+id/text_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/image_item_right_arrow"
        android:layout_toStartOf="@id/image_item_right_arrow"
        android:textColor="@color/colorItemDataitle"
        android:textSize="@dimen/item_data_title_text_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_item_title"
        android:layout_toLeftOf="@id/image_item_right_arrow"
        android:layout_toStartOf="@id/image_item_right_arrow">

        <ImageView
            android:id="@+id/image_item_data"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/item_data_margin_left"
            android:layout_marginStart="@dimen/item_data_margin_left"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/text_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/image_item_data"
            android:layout_toStartOf="@id/image_item_data"
            android:textColor="@color/colorItemDatailDesc"
            android:textSize="@dimen/item_data_description_text_size" />
    </RelativeLayout>

</RelativeLayout>
